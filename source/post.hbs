<div class="row">
  <div class="sidebar d-flex flex-column p-3 text-white bg-light col-md-2">
    <ul class="nav nav-pills flex-column mb-auto">
      {{#each postList}}
      <li class="nav-item">
        <a class="nav-link" href="/{{this.permalink}}">
          {{this.title}}
        </a>
      </li>
      {{/each}}
    </ul>
  </div>

  <main class="col-md-9 ms-sm-auto col-lg-10 mt-3 px-md-4">
    <h1>{{title}}</h1>
    {{{body}}}
    {{#if tags}}
    <div class="row">
      <div class="col-md-12 mt-3 mb-3">
        <h5 class="text-muted">Tags:</h5>
        {{#each tags}}
        <a href="/tag/{{this}}">{{this}}</a> |
        {{/each}}
      </div>
    </div>
  {{/if}}
  </main>
</div>