<div class="row">
  <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
    <div class="position-sticky pt-3">
      <ul class="nav flex-column">
        <li class="nav-item mb-2">
          <input type="text" class="form-control ds-input" id="search-input" placeholder="Search docs..." aria-label="Search docs for..." autocomplete="off" data-bd-docs-version="5.0" spellcheck="false" role="combobox" aria-autocomplete="list" aria-expanded="false" style="position: relative; vertical-align: top;">
          <ul id="search-results" class="list-group" style="z-index: 999; position: absolute; width: 100%;"></ul>
        </li>
        {{#each postList}}
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/{{this.permalink}}/">
            {{this.title}}
          </a>
        </li>
        {{/each}}
        <li class="nav-item p-3" style="width: 120px;">
          <a href="https://www.netlify.com">
            <img src="/content/images/netlify-color-accent.svg" alt="Deploys by Netlify" />
          </a>
        </li>
      </ul>
    </div>
  </nav>
  {{!-- {{#if toc.length}} --}}
  {{#ifCond (objLength toc) '>' 0}}
  <main class="col-md-9 ms-sm-auto col-lg-8 mt-3 px-md-4">
  {{else}}
  <main class="col-md-9 ms-sm-auto col-lg-10 mt-3 px-md-4">
  {{/ifCond}}
    <h1>{{title}}</h1>
    {{{body}}}
    {{#if tags}}
    <div class="row">
      <div class="col-md-12 mt-3 mb-3">
        <h5 class="text-muted">Tags:</h5>
        {{#each tags}}
        <a href="/tag/{{this}}/">{{this}}</a> |
        {{/each}}
      </div>
    </div>
  {{/if}}
  </main>
  {{#ifCond (objLength toc) '>' 0}}
  <div class="toc mt-3 col-lg-2 d-none d-lg-block d-xl-block">
    <div class="toc-heading">On this page</div>
    <ul>
    {{#each @root.toc}}
      {{#each this}}
        <li>
          <a href="#{{this.id}}">{{this.text}}</a>
        </li>
      {{/each}}
    {{/each}}
    </ul>
  </div>
  {{/ifCond}}
</div>